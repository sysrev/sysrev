[Unit]
Description=Datapub Server
After=network.target
StartLimitIntervalSec=0

[Service]
User=ubuntu
Group=ubuntu
EnvironmentFile=/home/ubuntu/datapub/env
ExecStart=/home/ubuntu/.nix-profile/bin/nix-shell --run "java -Xms1024m -Xmx1024m -server -cp /home/ubuntu/datapub/datapub.jar clojure.main -m datapub.main"
WorkingDirectory=/home/ubuntu/datapub
Restart=always
RestartSec=1

[Install]
WantedBy=multi-user.target