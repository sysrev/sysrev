<configuration>
  <appender name="console" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%d{hh:mm:ss.sss} %-6level [%logger] %msg%n</pattern>
    </encoder>
  </appender>
  <root level="INFO">
    <appender-ref ref="console"/>
  </root>
  <logger name="com.zaxxer.hikari" level="WARN" />
  <logger name="org.apache.http.client" level="ERROR" />
  <logger name="com.google.javascript.jscomp" level="ERROR" />
  <logger name="org.openqa.selenium" level="WARN" />
  <logger name="com.datastax.driver.core" level="WARN" />
  <logger name="com.datastax.driver.core.Cluster" level="INFO" />
</configuration>
