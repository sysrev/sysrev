upstream sysrev-clj-rf {
    server 127.0.0.1:4061;
}

server {
    listen 80;
    server_name sysrev-rf;

    access_log /var/log/nginx/sysrev.access_log;
    error_log /var/log/nginx/sysrev.error_log info;

    root /var/www/sysrev-rf;

    sendfile off;

    location @clj-site {
        proxy_next_upstream error;
        proxy_set_header X-Real-IP $remote_addr;
        proxy_set_header Host $host;
        proxy_pass http://sysrev-clj-rf;
    }

    location /files {
    }

    location ~ /(out|css|semantic)/.* {
        add_header Cache-Control "no-cache, must-revalidate";
    }

    location / {
        expires -1;
        try_files $uri @clj-site;
    }
}
